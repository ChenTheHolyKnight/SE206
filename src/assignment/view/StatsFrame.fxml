<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" styleClass="pane" stylesheets="@mainFrame2.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="assignment.view.StatsFrameController">
   <children>
      <Pane layoutX="300.0" layoutY="100.0" prefHeight="400.0" prefWidth="400.0" styleClass="box">
         <children>
            <TableView fx:id="_playerTable" fixedCellSize="70.0" layoutX="50.0" layoutY="150.0" prefHeight="100.0" prefWidth="300.0">
              <columns>
                <TableColumn fx:id="_nameColumn" prefWidth="100.0" resizable="false" text="Name" />
                <TableColumn fx:id="_scoreColumn" prefWidth="100.0" resizable="false" text="Score" />
                  <TableColumn fx:id="_attemptsColumn" prefWidth="100.0" resizable="false" text="Attempts" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <JFXButton layoutX="155.0" layoutY="275.0" onAction="#handleStayButton" prefHeight="50.0" prefWidth="90.0" text="Stay">
               <font>
                  <Font size="20.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="_button" layoutX="110.0" layoutY="340.0" prefHeight="50.0" prefWidth="180.0" text="Go Hard Level">
               <font>
                  <Font size="20.0" />
               </font>
            </JFXButton>
            <Label alignment="CENTER" layoutY="50.0" prefHeight="70.0" prefWidth="411.0" text="Statistics">
               <font>
                  <Font size="51.0" />
               </font>
            </Label>
            <JFXButton layoutX="5.0" layoutY="5.0" onAction="#handleBackButton" prefHeight="40.0" prefWidth="40.0" text="&lt;">
               <font>
                  <Font size="20.0" />
               </font>
            </JFXButton>
            <Label layoutX="55.0" layoutY="5.0" prefHeight="40.0" text="Go Back To Main Menu">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
         </children>
      </Pane>
   </children>
</AnchorPane>
